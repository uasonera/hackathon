@model ClassLibrary2.ViewModels.ODCListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">


<section class="content">
    <div class="row">
        <center>
            <div class="col-xs-2">
                </div>
                <div class="col-xs-8">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Student Payment List</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="Table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Student Code
                                        </th>
                                        <th>
                                            Pay
                                        </th>
                                        <th>
                                            Payment Details
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListofODC)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NameOfCandidate) @Html.DisplayFor(modelItem => item.SurnameOfCandidate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CodeOfCandidate) 
                                            </td>

                                            <td>
                                                <center> <a href="@Url.Action("PaymentDetails", "Payment",new {id=item.CodeOfCandidate})" class="Button"><span class="glyphicon glyphicon-search"></span></a></center>
                                            </td>
                                            <td>
                                                <center> <a href="@Url.Action("PaymentDetailslist", "Payment",new {id=item.CodeOfCandidate})" class="Button"><span class="glyphicon glyphicon-search"></span></a></center>
                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>


                        </div>
                    </div>
                </div>
</center>
    </div>
</section>
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script>
        $(document).ready(function () {
            $('#Table').DataTable();
        });
</script>




