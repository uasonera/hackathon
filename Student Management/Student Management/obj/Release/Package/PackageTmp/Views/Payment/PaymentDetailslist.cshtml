@model ClassLibrary2.ViewModels.ODCListViewModel

@{
    ViewBag.Title = "PaymentDetailslist";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">

    <section class="content">
        <div class="row">
            <center>

                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Student Payment List</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="Table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Place
                                        </th>
                                        <th>
                                            Timing
                                        </th>
                                        <th>
                                            Date of ODC
                                        </th>
                                        <th>
                                            Department
                                        </th>
                                        <th>
                                            Amount Paid
                                        </th>
                                        <th>
                                            Date of Payement
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListofODC)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NameOfCandidate) @Html.DisplayFor(modelItem => item.SurnameOfCandidate)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Place)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Timing)

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateOfODC)
                                                <input type="hidden" name="DateOfODC" value="@item.DateOfODC" />

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Department)
                                                <input type="hidden" name="Department" value="@item.Department" />

                                            </td>
                                            <th>
                                                @Html.DisplayFor(modelItem => item.AmountPaid)
                                            </th>
                                            <th>
                                                @Html.DisplayFor(modelItem => item.DateOfPayement)
                                            </th>
                                        </tr>
                                    }
                                </tbody>

                            </table>


                        </div>
                    </div>
                </div>
            </center>
        </div>
        
    </section>
}


<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script>
      $(document).ready(function () {
            $('#Table').DataTable();
        });
</script>

