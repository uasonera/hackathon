@model ClassLibrary2.ViewModels.ODCListViewModel

@{
    ViewBag.Title = "PaymentDetails";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">

@using (Html.BeginForm("SubmitAmountPaid", "Payment", FormMethod.Post)) { 

<section class="content">
    <div class="row">
        <center>
            
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Student Payment List</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="Table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Place
                                    </th>
                                    <th>
                                        Timing
                                    </th>
                                    <th>
                                        Date of ODC
                                    </th>
                                    <th>
                                        Department
                                    </th>
                                    <th>
                                        Pay For
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListofODC)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NameOfCandidate) @Html.DisplayFor(modelItem => item.SurnameOfCandidate)
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Place)
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Timing)
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfODC)
                                            <input type="hidden" name="DateOfODC" value="@item.DateOfODC" />
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Department)
                                            <input type="hidden" name="Department" value="@item.Department" />
                                            
                                        </td>
                                        <th>
                                            <center><input type="checkbox" class="checkbox checkbox-inline" name="Checkbox" value="@item.ODCId"/></center>
                                        </th>
                                   </tr>
                                    }
                            </tbody>

                        </table>


                    </div>
                </div>
            </div>
        </center>
    </div>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">ODC Details</h3>
        </div>
    <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for="inputEmail3" class="control-label">Amount Paid</label>
                    <input type="text" class="form-control" id="inputEmail3" name="AmountPaid" placeholder="Amount Paid" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputEmail3" class="control-label">Date of Payment</label>
                    <input type="date" class="form-control" id="inputEmail3" name="DateOfPayement" placeholder="Date of Payment" required>
                </div>
            </div>
        <div class="box-footer">
            <center>
                <div class="form-group ">
                    <input type="submit" class="btn btn-primary" value="Submit">
                </div>
            </center>
        </div>
        </div>
</div>
</section>
}


<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script>
        $(document).ready(function () {
            $('#Table').DataTable();
        });
</script>




