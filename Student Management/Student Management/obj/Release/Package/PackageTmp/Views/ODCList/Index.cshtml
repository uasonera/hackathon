@model ClassLibrary2.ViewModels.ODCListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Students(ODC)</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
@using (Html.BeginForm("CreatePdf", "PDFGeneratorODCLIST", FormMethod.Post))
{
                    <table id="Table" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Place
                                </th>
                                <th>
                                    Timing
                                </th>
                                <th>
                                    Date of ODC
                                </th>
                                <th>
                                    Department
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListofODC)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameOfCandidate) @Html.DisplayFor(modelItem => item.SurnameOfCandidate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Place)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Timing)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateOfODC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                   
                                    @*<td>
                                        <button type="button" class="btn btn-block btn-primary btn-xs" onclick="location.href='@Url.Action("DeleteStudent","StudentList",new {id=item.id})'">Delete Student</button>

                                    </td>*@
                                </tr>
                            }
                        </tbody>

                    </table>
                    <div class="box-footer">
                        <center>
                            <div class="form-group ">
                                <input type="submit" class="btn btn-primary" value="Generate PDF">
                            </div>
                        </center>
                    </div>

}
                </div>
            </div>
        </div>
    </div>
</section>
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script>
        $(document).ready(function () {
            $('#Table').DataTable();
        });
</script>



